@model IEnumerable<test6.Models.Issue>

<div class="container p-5">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Issue</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Issue" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-square"></i> 
            </a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width:100%">
            <thead>
                <tr>

                    <th>
                        ProjectName
                    </th>
                    <th>
                        Discription
                    </th>
                    <th>
                        Severity
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="30%">@obj.ProjectName</td>
                    <td width="30%">@obj.Discription</td>
                    <td width="30%">@obj.Severity</td>
                    <td width="30%">@obj.Status</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Issue" asp-route-ProjectName="@obj.ProjectName" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>


                        </div>
                    </td>
                </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Running Projects </p>
    }

</div>



