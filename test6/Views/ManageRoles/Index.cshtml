@model IEnumerable<test6.Models.ManageRoles>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Assign Roles</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="ManageRoles" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-user-plus"></i>
            </a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Role
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Id</td>
                        <td width="50%">@obj.Name</td>
                        <td width="50%">@obj.Email</td>
                        <td width="50%">@obj.Role</td>
                        
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ManageRoles" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="ManageRoles" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Roles assign </p>
    }

</div>

