@model IEnumerable<test6.Models.Projects>

<div class="container p-5">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Project</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Projects" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus-square"></i>
            </a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table-bordered table-striped" style="width:100%">
            <thead>
                <tr>

                    <th>
                        ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        EndDate
                    </th>
                    <th>
                        StartDate
                    </th>
                    <th>
                        TechUse
                    </th>



                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="20%">@obj.Id</td>
                        <td width="20%">@obj.Name</td>
                        <td width="20%">@obj.EndDate</td>
                        <td width="20%">@obj.StartDate</td>
                        <td width="20%">@obj.TechUSe</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Projects" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                               
                                <a asp-controller="Projects" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Running Projects </p>
    }

</div>

